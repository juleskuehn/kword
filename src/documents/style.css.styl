body
	background gray

#sidebar
	width 250px
	background #2a2a2a
	color #aaa
	padding 5px
	margin 0
	height 100%
	top 0
	left 0
	position fixed
	z-index 100

#preview
	#preview_result
		position absolute
		background whitesmoke
		box-shadow 2px 2px 10px #2a2a2a
		padding 10px
		top 10px
		left 270px
		outline solid 1px black
	#output_ascii
		position absolute
		top 0
		left 270px
		padding 20px
		margin-left 20px
		background whitesmoke
		font-family monospace
		color #222
		display none